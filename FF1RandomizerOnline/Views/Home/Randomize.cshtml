@using FF1Lib
@model FF1RandomizerOnline.Models.RandomizeViewModel
<form id="RandomizeForm" method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Randomize">
	@Html.Raw(ViewData["BuildMeta"])
	<div id="vueScope">
		<label class="section">Upload ROM</label><br />
		<label class="btn btn-default"><input type="file" accept=".nes" asp-for="File" style="display: none" onchange="setFileName();" />Browse</label> <label for="File" id="file-label"></label>
		@Html.ValidationSummary()
		<div class="row">
			<div class="col-xs-12 col-md-5">
				<div class="row">
					<div class="col-xs-12"><label asp-for="Seed" />Seed</div>
				</div>
				<div class="row">
					<div class="col-xs-7" v-bind:class="{ 'has-error': seedError }"><input class="form-control" v-model="SeedInput" type="text" asp-for="Seed" /></div>
					<div class="col-xs-5"><input class="btn btn-default" type="button" value="New Seed" v-on:click="newSeed();" /></div>
				</div>
			</div>
			<div class="col-xs-12 col-md-7">
				<div class="row">
					<div class="col-xs-12"><label for="Flags">Flags</label></div>
				</div>
				<div class="row">
					<div class="col-xs-7" v-bind:class="{ 'has-error': flagError }"><input class="form-control" v-model="FlagsInput" type="text" asp-for="FlagsInput" id="Flags" /></div>
					<div class="col-xs-4"><input class="btn btn-default" type="button" value="Import / Export" v-on:click="importSeedFlags();" /></div>
				</div>
			</div>
		</div>
		<br />
		<div class="row">
			<div class="col-xs-12">
				Presets:
				@Html.Raw(ViewData["DebugOnlyPreset"])
				<a v-on:click.prevent="preset('Default')">Defaults</a>,
				<a v-on:click.prevent="preset('Improved Vanilla')">Improved Vanilla</a>,
				<a v-on:click.prevent="preset('Beginner')">Beginner</a>,
				<a v-on:click.prevent="preset('Full NPC')">NPC Shuffle</a>
			</div>
		</div>
		<ul class="section nav nav-pills">
			<li class="active"><a href="#shuffle" data-toggle="tab">Shuffle</a></li>
			<li><a href="#treasures" data-toggle="tab">Treasures</a></li>
			<li><a href="#goal" data-toggle="tab">Goal</a></li>
			<li><a href="#map" data-toggle="tab">Map</a></li>
			<li><a href="#scale" data-toggle="tab">Scale</a></li>
			<li><a href="#party" data-toggle="tab">Party</a></li>
			<li><a href="#conveniences" data-toggle="tab">Conveniences</a></li>
			<li><a href="#bug-fixes" data-toggle="tab">Bug Fixes</a></li>
			<li><a href="#fun" data-toggle="tab">Fun %</a></li>
		</ul>
		<div class="tab-content clearfix" style="height: 500px">
			<div class="section tab-pane active" id="shuffle">
				<div class="col-xs-4">
					<div class="checkbox-cell"><input v-model="Shops" type="checkbox" asp-for="Flags.Shops" /> <label asp-for="Flags.Shops"></label></div>
					<div class="checkbox-cell" title="All weapons and armor for sale are random unincentivized items of that type, except caster items and elite gear."><input class="indent" v-model="RandomWares" :disabled="!Shops" type="checkbox" asp-for="Flags.RandomWares" /> <label :style="!Shops ? { color: 'grey'} : {}" asp-for="Flags.RandomWares">Random Weapons and Armor</label></div>
					<div class="checkbox-cell" title="Random Shops can now stock any caster item or piece of elite gear. See What's New for the full list."><input class="indent" v-model="RandomWaresIncludesSpecialGear" :disabled="!Shops || !RandomWares" type="checkbox" asp-for="Flags.RandomWaresIncludesSpecialGear" /> <label :style="!Shops ? { color: 'grey'} : {}" asp-for="Flags.RandomWaresIncludesSpecialGear">Including Caster Items and Elite Gear</label> <small>(<a asp-area="" asp-controller="Home" asp-action="WhatsNew">New!</a>)</small></div>
					<div class="checkbox-cell"><input v-model="MagicShops" type="checkbox" asp-for="Flags.MagicShops" /> <label asp-for="Flags.MagicShops">Magic Shops</label></div>
					<div class="checkbox-cell"><input v-model="MagicLevels" type="checkbox" asp-for="Flags.MagicLevels" /> <label asp-for="Flags.MagicLevels">Magic Levels</label></div>
					<div class="checkbox-cell"><input v-model="MagicPermissions" :disabled="!MagicLevels" class="indent" type="checkbox" asp-for="Flags.MagicPermissions" /> <label :style="!MagicLevels ? { color: 'grey'} : {}" asp-for="Flags.MagicPermissions">Keep Permissions</label></div>
					<div class="checkbox-cell"><input v-model="ItemMagic" type="checkbox" asp-for="Flags.ItemMagic" /> <label asp-for="Flags.ItemMagic">Item Magic</label></div>
				</div>
				<div class="col-xs-4">
					<div class="checkbox-cell"><input v-model="EnemyScripts" type="checkbox" asp-for="Flags.EnemyScripts" /> <label asp-for="Flags.EnemyScripts">Enemy Scripts</label></div>
					<div class="checkbox-cell"><input v-model="AllowUnsafePirates" :disabled="!EnemyScripts" class="indent" type="checkbox" asp-for="Flags.AllowUnsafePirates" /> <label :style="!EnemyScripts ? { color: 'grey'} : {}" asp-for="Flags.AllowUnsafePirates">Allow Unsafe Pirates <b v-if="AllowUnsafePirates" title="Risks 9 Pirates with THUNDER, etc. blocking early progression" style="color:orange">⚠</b></label></div>
					<div class="checkbox-cell"><input v-model="EnemySkillsSpells" type="checkbox" asp-for="Flags.EnemySkillsSpells" /> <label asp-for="Flags.EnemySkillsSpells">Enemy Skills/Spells</label></div>
					<div class="checkbox-cell"><input v-model="EnemyStatusAttacks" type="checkbox" asp-for="Flags.EnemyStatusAttacks" /> <label asp-for="Flags.EnemyStatusAttacks">Enemy Status Attacks</label></div>
					<div class="checkbox-cell"><input v-model="EnemyFormationsUnrunnable" type="checkbox" asp-for="Flags.EnemyFormationsUnrunnable" /> <label asp-for="Flags.EnemyFormationsUnrunnable">Enemy Unrunnable Formations <b v-if="!WaitWhenUnrunnable" title="Without Change Unrunnable RUN -> WAIT convenience you will have no indication if an encounter is unrunnable." style="color:orange">⚠</b></label></div>
					<div class="checkbox-cell"><input v-model="EnemyFormationsSurprise" type="checkbox" asp-for="Flags.EnemyFormationsSurprise" /> <label asp-for="Flags.EnemyFormationsSurprise">Enemy Strike First Chance</label></div>
					<div class="checkbox-cell">
						<select v-model="FormationShuffleMode" asp-for="Flags.FormationShuffleMode">
							<option value="0">Don't Shuffle Encounters</option>
							<option value="1">Shuffle Encounter Rarity</option>
							<option value="2">Shuffle All Encounters Across Zones</option>
							<option value="3">Randomize Encounter Zones</option>
						</select>
					</div>
					<div class="checkbox-cell"><input v-model="EnemyTrapTiles" type="checkbox" asp-for="Flags.EnemyTrapTiles" /> <label asp-for="Flags.EnemyTrapTiles">Enemy Forced Encounter Tiles</label> <small>(<a asp-area="" asp-controller="Home" asp-action="WhatsNew">New!</a>)</small></div>
					<div class="checkbox-cell"><input v-model="RandomTrapFormations" :disabled="!EnemyTrapTiles" class="indent" type="checkbox" asp-for="Flags.RandomTrapFormations" /> <label :style="!EnemyTrapTiles ? { color: 'grey'} : {}" asp-for="Flags.RandomTrapFormations">Use Random Formations</label></div>
					<div class="checkbox-cell"></div>
					<div class="checkbox-cell"><input v-model="Rng" type="checkbox" asp-for="Flags.Rng" /> <label asp-for="Flags.Rng">RNG Table</label><br /></div>
				</div>
			</div>
			<div class="section tab-pane col-xs-12" id="treasures">
				<div class="col-xs-4">
					<h4>Items Shuffle</h4>
					<div class="col-xs-12">
						<div class="checkbox-cell" title="If unchecked, forces vanilla Treasure Chests"><input v-model="Treasures" type="checkbox" asp-for="Flags.Treasures" /> <label asp-for="Flags.Treasures"></label></div>
						<div class="checkbox-cell" title="If checked, randomizes the contents of all non-progression, non-incentivized items, weapons, and gear."><input class="indent" :disabled="!Treasures" v-model="RandomLoot" type="checkbox" asp-for="Flags.RandomLoot" /> <label :style="!Treasures ? { color: 'grey'} : {}" asp-for="Flags.RandomLoot">Randomize Treasures</label></div>
						<div class="checkbox-cell" :style="!Treasures ? { color: 'grey'} : {}">
							<span class="indent">Random Wealth:
							<select v-model="WorldWealth" asp-for="Flags.WorldWealth" :disabled="!Treasures">
								<option value="0">High</option>
								<option value="1">Normal</option>
								<option value="2">Low</option>
								<option value="3">Impoverished</option>
								<option value="4">Melmond</option>
							</select>
							</span>
						</div>
						<div class="checkbox-cell" title="If unchecked, forces vanilla Bridge, Lute, Ship, Rod, Canoe, Cube, Bottle"><input v-model="NPCItems" type="checkbox" asp-for="Flags.NPCItems" /> <label asp-for="Flags.NPCItems">Main NPC Items</label></div>
						<div class="checkbox-cell" title="If unchecked, forces vanilla Crystal, Herb, Key, Canal, Oxyale, Chime, Xcalber"><input v-model="NPCFetchItems" type="checkbox" asp-for="Flags.NPCFetchItems" /> <label asp-for="Flags.NPCFetchItems">Fetch Quest Rewards</label></div>
						<div class="checkbox-cell" title="Shuffle the locations of Bahamut, Dr. Unne, and the Elf Doctor."><input v-model="ShuffleObjectiveNPCs" type="checkbox" asp-for="Flags.ShuffleObjectiveNPCs" /> <label asp-for="Flags.ShuffleObjectiveNPCs">Objective NPCs</label></div>
					</div>
				</div>
				<div class="col-xs-4" style="border-left: 1px solid black;" :style="!Treasures ? { color: 'grey'} : {}">
					<h4>Incentivized Locations</h4>
					<div class="col-xs-12">
						<div class="checkbox-cell" title="King, Princess, Bikke, Sarda, Sage, Robot, Caravan"><input v-model="IncentivizeFreeNPCs" :disabled="!NPCItems || !Treasures" type="checkbox" asp-for="Flags.IncentivizeFreeNPCs" /> <label :style="!NPCItems ? { color: 'grey'} : {}" asp-for="Flags.IncentivizeFreeNPCs">Main NPCs</label></div>
						<div class="checkbox-cell" title="Astos, Matoya, Prince, Dwarves, Lefein, Fairy"><input v-model="IncentivizeFetchNPCs" :disabled="!NPCFetchItems || !Treasures" type="checkbox" asp-for="Flags.IncentivizeFetchNPCs" /> <label :style="!NPCFetchItems ? { color: 'grey'} : {}" asp-for="Flags.IncentivizeFetchNPCs">Fetch Quest NPCs</label></div>
						<div class="checkbox-cell"></div>
						<div class="checkbox-cell" title="Floater chest"><input v-model="IncentivizeIceCave" :disabled="!Treasures" type="checkbox" asp-for="Flags.IncentivizeIceCave" /> <label asp-for="Flags.IncentivizeIceCave">Ice Cave</label></div>
						<div class="checkbox-cell" title="Tail chest"><input v-model="IncentivizeOrdeals" :disabled="!Treasures" type="checkbox" asp-for="Flags.IncentivizeOrdeals" /> <label asp-for="Flags.IncentivizeOrdeals">Ordeals</label></div>
						<div class="checkbox-cell" title="Crown chest"><input v-model="IncentivizeMarsh" :disabled="!Treasures" type="checkbox" asp-for="Flags.IncentivizeMarsh" /> <label asp-for="Flags.IncentivizeMarsh">Marsh Cave</label></div>
						<div class="checkbox-cell"></div>
						<div class="checkbox-cell" title="Ruby chest (behind Vampire)"><input v-model="IncentivizeEarth" :disabled="!Treasures" type="checkbox" asp-for="Flags.IncentivizeEarth" /> <label asp-for="Flags.IncentivizeEarth">Earth Cave</label></div>
						<div class="checkbox-cell" title="Last Floor West (Red D)"><input v-model="IncentivizeVolcano" :disabled="!Treasures" type="checkbox" asp-for="Flags.IncentivizeVolcano" /> <label asp-for="Flags.IncentivizeVolcano">Volcano</label></div>
						<div class="checkbox-cell" title="Slab chest"><input v-model="IncentivizeSeaShrine" :disabled="!Treasures" type="checkbox" asp-for="Flags.IncentivizeSeaShrine" /> <label asp-for="Flags.IncentivizeSeaShrine">Sea Shrine</label></div>
						<div class="checkbox-cell" title="Adamant chest"><input v-model="IncentivizeSkyPalace" :disabled="!Treasures" type="checkbox" asp-for="Flags.IncentivizeSkyPalace" /> <label asp-for="Flags.IncentivizeSkyPalace">Sky Palace</label></div>
						<div class="checkbox-cell"></div>
						<div class="checkbox-cell" title="TNT chest"><input v-model="IncentivizeConeria" :disabled="!Treasures" type="checkbox" asp-for="Flags.IncentivizeConeria" /> <label asp-for="Flags.IncentivizeConeria">Coneria (locked)</label></div>
						<div class="checkbox-cell" title="Bottom Floor South East"><input v-model="IncentivizeMarshKeyLocked" :disabled="!Treasures" type="checkbox" asp-for="Flags.IncentivizeMarshKeyLocked" /> <label asp-for="Flags.IncentivizeMarshKeyLocked">Marsh (locked)</label></div>
					</div>
				</div>
				<div class="col-xs-4" style="border-left: 1px solid black;" :style="!Treasures ? { color: 'grey'} : {}">
					<h4>Incentivized Items</h4>
					<div class="col-xs-12">
						<div>
							Any Required Item being Shuffled will be included in the incentive pool by default. Add additional items below:
						</div>
						<br />
						<div class="checkbox-cell"><input v-model="IncentivizeTail" :disabled="!Treasures" type="checkbox" asp-for="Flags.IncentivizeTail" /> <label asp-for="Flags.IncentivizeTail">Tail</label></div>
						<div class="checkbox-cell" title="Other non-required quest items that are shuffled such as Ruby, Adamant, Crystal, TNT, Herb, etc."><input v-model="IncentivizeFetchItems" :disabled="!Treasures" type="checkbox" asp-for="Flags.IncentivizeFetchItems" /> <label asp-for="Flags.IncentivizeFetchItems">Other Quest Items</label></div>
						<div class="checkbox-cell"></div>
						<div class="checkbox-cell"><input v-model="IncentivizeMasamune" :disabled="!Treasures" type="checkbox" asp-for="Flags.IncentivizeMasamune" /> <label asp-for="Flags.IncentivizeMasamune">Masamune</label></div>
						<div class="checkbox-cell"><input v-model="IncentivizeRibbon" :disabled="!Treasures" type="checkbox" asp-for="Flags.IncentivizeRibbon" /> <label asp-for="Flags.IncentivizeRibbon">Ribbon</label></div>
						<div class="checkbox-cell"><input v-model="IncentivizeOpal" :disabled="!Treasures" type="checkbox" asp-for="Flags.IncentivizeOpal" /> <label asp-for="Flags.IncentivizeOpal">Opal Bracelet</label></div>
						<div class="checkbox-cell"></div>
						<div class="checkbox-cell"><input v-model="IncentivizeDefCastArmor" :disabled="!Treasures" type="checkbox" asp-for="Flags.IncentivizeDefCastArmor" /> <label asp-for="Flags.IncentivizeDefCastArmor">White Shirt</label></div>
						<div class="checkbox-cell"><input v-model="IncentivizeOtherCastArmor" :disabled="!Treasures" type="checkbox" asp-for="Flags.IncentivizeOtherCastArmor" /> <label asp-for="Flags.IncentivizeOtherCastArmor">Power Gauntlet</label></div>
						<div class="checkbox-cell"><input v-model="IncentivizeDefCastWeapon" :disabled="!Treasures" type="checkbox" asp-for="Flags.IncentivizeDefCastWeapon" /> <label asp-for="Flags.IncentivizeDefCastWeapon">Defense</label></div>
						<div class="checkbox-cell"><input v-model="IncentivizeOffCastWeapon" :disabled="!Treasures" type="checkbox" asp-for="Flags.IncentivizeOffCastWeapon" /> <label asp-for="Flags.IncentivizeOffCastWeapon">Thor Hammer</label></div>
					</div>
				</div>
			</div>
			<div class="section tab-pane" id="goal">
				<div class="col-xs-4" :style="ShardHunt ? { color: 'grey'} : {}">
					<div class="col-xs-12">
						<h4>Chaos Rush</h4>
						<div>
							<br />
							No time for a long race? Chaos Rush combined with Free Orbs lets you begin the game with the Temple of Fiends Revisited completely unlocked!
							<br />&nbsp;
						</div>
						<div class="checkbox-cell" title="Enable access to CHAOS without the Mystic KEY and start with the LUTE."><input v-model="ChaosRush" :disabled="ShardHunt" type="checkbox" asp-for="Flags.ChaosRush" /> <label :style="ShardHunt ? { color: 'grey'} : {}" asp-for="Flags.ChaosRush">CHAOS Rush</label></div>
						<div class="checkbox-cell" title="Begin the game with all orbs already lit."><input v-model="FreeOrbs" :disabled="ShardHunt" type="checkbox" asp-for="Flags.FreeOrbs" /> <label :style="ShardHunt ? { color: 'grey'} : {}" asp-for="Flags.FreeOrbs">Free Orbs</label></div>
					</div>
				</div>
				<div class="col-xs-4" style="border-left: 1px solid black;" :style="ChaosRush ? { color: 'grey'} : {}">
					<div class="col-xs-12">
						<h4>Treasure Hunt</h4>
						<div>
							<br />
							A new adventure! Instead of lighting the four orbs to activate the BLACK ORB, the Light Warriors must seek out and collect several of a random treasure item.
							<br />&nbsp;
						</div>
						<div class="checkbox-cell" title="Treasure Hunt alternate gameplay mode. Collect 16 of a random Treasure Item to activate the BLACK ORB."><input v-model="ShardHunt" :disabled="ChaosRush" type="checkbox" asp-for="Flags.ShardHunt" /> <label :style="ChaosRush ? { color: 'grey'} : {}" asp-for="Flags.ShardHunt">Treasure Hunt</label></div>
						<div class="checkbox-cell" title="A larger hunt for the hardcore hunter. You will now need between 24 and 30 of the Treasure Item."><input v-model="ExtraShards" :disabled="ChaosRush || !ShardHunt" type="checkbox" asp-for="Flags.ExtraShards" /> <label :style="(ChaosRush || !ShardHunt) ? { color: 'grey'} : {}" asp-for="Flags.ExtraShards">Extra Treasure</label></div>
						<br />&nbsp;
						<br />&nbsp;
						<br />&nbsp;
					</div>
				</div>
				<div class="col-xs-4" style="border-left: 1px solid black;">
					<div class="col-xs-12">
						<h4>Temple of Fiends</h4>
						<div>
							<br />
							Randomly pick one of four new final bosses to replace the legendary Chaos! Take heed though; they can be more than a match for all but the mightiest Warriors.
							<br />&nbsp;
						</div>
						<div class="checkbox-cell" title="Replace the Final Battle against Chaos with a different challenge."><input v-model="TransformFinalFormation" type="checkbox" asp-for="Flags.TransformFinalFormation" /> <label asp-for="Flags.TransformFinalFormation">Alternate Final Boss <b v-if="ChaosRush && TransformFinalFormation" title="Beware - losing one of these alternate final battles at the end of a long ToFR can be rage inducing." style="color:orange">⚠</b></label></div>
						<div>
							<br />
							Jump straight from the Black Orb to the Final Battle! You may choose to keep the fiend refight tiles - two on each side of the path to Chaos.
							<br />&nbsp;
						</div>
						<div class="checkbox-cell" title="Black Orb teleports to the final floor. You will begin with the LUTE if you wish to fill the air with beautiful music."><input v-model="ShortToFR" type="checkbox" asp-for="Flags.ShortToFR" /> <label asp-for="Flags.ShortToFR">Shorten ToFR</label> <small>(<a asp-area="" asp-controller="Home" asp-action="WhatsNew">New!</a>)</small></div>
						<div class="checkbox-cell" title="Keep the fiend refight tiles split between the two avenues on the final floor."><input :disabled="!ShortToFR" v-model="PreserveFiendRefights" type="checkbox" asp-for="Flags.PreserveFiendRefights" /> <label :style="!ShortToFR ? { color: 'grey'} : {}" asp-for="Flags.PreserveFiendRefights">Include Fiend Tiles</label> <small>(<a asp-area="" asp-controller="Home" asp-action="WhatsNew">New!</a>)</small></div>
						<br />&nbsp;
						<br />&nbsp;
					</div>
				</div>
			</div>
			<div class="section tab-pane" id="map">
				<div class="col-xs-4">
					<div class="col-xs-12">
						<h4>Entrance Shuffle <small>(<a asp-area="" asp-controller="Home" asp-action="WhatsNew">New!</a>)</small></h4>
						<div>
							<br />
							Try shuffling dungeon entrances, floors, and towns to create a completely new world to explore!
							<b v-if="!NPCItems">Requires Treasure Shuffle and NPC Item Shuffle</b>
							<br />&nbsp;
						</div>
						<div class="checkbox-cell" title="Shuffle All Non-Town Entrances"><input v-model="Entrances" :disabled="!NPCItems" type="checkbox" asp-for="Flags.Entrances" /> <label :style="!NPCItems ? { color: 'grey'} : {}" asp-for="Flags.Entrances"></label></div>
						<div title="Also shuffle all the floors to other dunegons."><input :disabled="!Entrances" class="indent" v-model="Floors" type="checkbox" asp-for="Flags.Floors" /> <label :style="!Entrances ? { color: 'grey'} : {}" asp-for="Flags.Floors">Floors <b v-if="Floors" title="Prepare yourself for potentially large, sprawling, maze-like dungeons!" style="color:orange">⚠</b></label></div>
						<div title="Ensures ToFR is buried instead of forced to ground level."><input :disabled="!Entrances || !Floors" class="indent" v-model="AllowDeepCastles" type="checkbox" asp-for="Flags.AllowDeepCastles" /> <label :style="(!Entrances || !Floors) ? { color: 'grey'} : {}" asp-for="Flags.AllowDeepCastles">Deep ToFR <b v-if="AllowDeepCastles" title="It is now possible for the entirety of ToFR to begin several floors down a massive dungeon. Be warned!" style="color:orange">⚠</b></label></div>
						<div class="checkbox-cell" title="Add Town Entrances to the Entrance Shuffle."><input v-model="Towns" :disabled="!NPCItems "type="checkbox" asp-for="Flags.Towns" /> <label :style="!NPCItems ? { color: 'grey'} : {}" asp-for="Flags.Towns"></label></div>
					</div>
				</div>
				<div class="col-xs-4" style="border-left: 1px solid black;">
					<div class="col-xs-12">
						<h4>Fixed Map Edits</h4>
						<div>
							<br />
							Classic Final Fantasy Randomizer map edits.
							<br />&nbsp;
						</div>
						<div class="checkbox-cell"><input v-model="OrdealsPillars" type="checkbox" asp-for="Flags.OrdealsPillars" /> <label asp-for="Flags.OrdealsPillars">Castle Ordeals Pillars</label></div>
						<div class="checkbox-cell"><input v-model="SkyCastle4FTeleporters" type="checkbox" asp-for="Flags.SkyCastle4FTeleporters" /> <label asp-for="Flags.SkyCastle4FTeleporters">Sky Castle 4F Teleporters</label></div>
						<div class="checkbox-cell"><input v-model="TitansTrove" type="checkbox" asp-for="Flags.TitansTrove" /> <label asp-for="Flags.TitansTrove">Titan's Trove</label></div>
						<div class="checkbox-cell" title="Yoga in the park!"><input v-model="ConfusedOldMen" type="checkbox" asp-for="Flags.ConfusedOldMen" /> <label asp-for="Flags.ConfusedOldMen">Confused Old Men</label></div>
						<div class="checkbox-cell" title="This is my kinda town!"><input v-model="AllowUnsafeMelmond" type="checkbox" asp-for="Flags.AllowUnsafeMelmond" /> <label asp-for="Flags.AllowUnsafeMelmond">Zozo Melmond</label></div>
						<div class="checkbox-cell"></div>
						<div class="checkbox-cell"><input v-model="MapOpenProgression" type="checkbox" asp-for="Flags.MapOpenProgression" /> <label asp-for="Flags.MapOpenProgression">Open Progression</label></div>
						<div class="checkbox-cell"><input v-model="MapOpenProgressionExtended" type="checkbox" :disabled="!MapOpenProgression" asp-for="Flags.MapOpenProgressionExtended" /> <label :style="!MapOpenProgression ? { color: 'grey'} : {}" asp-for="Flags.MapOpenProgressionExtended">Extended Open Progression</label> <small>(<a asp-area="" asp-controller="Home" asp-action="WhatsNew">New!</a>)</small></div>
					</div>
				</div>
				<div class="col-xs-4" style="border-left: 1px solid black;">
					<div class="col-xs-12">
						<h4>WarMECH</h4>
						<div>
							<br />
							Encounter 7 not enough WarMECH for you? Try a patrolling or required WarMECH instead.
							<br />&nbsp;
						</div>
						<div class="checkbox-cell"><label asp-for="Flags.WarMECHMode">WarMECH Mode:</label></div>
						<div class="checkbox-cell">
							<select v-model="WarMECHMode" asp-for="Flags.WarMECHMode">
								<option value="0">Vanilla</option>
